    <script>
        var pass = parseInt(document.getElementsByName("NewPassword"))
        var conpass = parseInt(document.getElementsByName("NewRePassword"))
        //const userDetails = await Register.findOne({email:email});
        $(document).ready(function(){
            $(".button").click(function(){
                if(pass == conpass)
                {
                        alert("verification OTP is sent on your email id")
                        alert("it may take a few seconds")
                }
                else
                {
                    console.log(pass)
                    console.log(conpass)
                    alert("PLEASR WAIT")
                }
                
            })
        });
    </script>
</head>
<body>
    <div class="container">     
        <div class="title">RICHARDS WINE AND RUM CAKE</div>
        <form action="/forgotPasswordOTP" method="post">  
        <div class="heading">Enter Email And New Password</div>
        
        <div class="user-details">
             <div class="input-box"> 
                <span class="details">Enter Email</span>
                <input type="text" name="email" placeholder="abc@gmail.com" required>
             </div>
          
            <div class="input-box">
                <span class="details">New Password </span>
                <input type="password" name="NewPassword" placeholder="*********" required>
            </div>

            <div class="input-box">
                <span class="details">Enter New Password Again </span>
                <input type="password" name="NewRePassword" placeholder="*********" required>
          
            
            </div>
        
          </div>
            <div class="button"> 
                <input type="submit" value="SUBMIT">
            </div>
            <div class="login">
                <li><a href="/login">Back to Login</a></li>
            </div>
        
        </form>
          
    </div>    
    </body>

</html>