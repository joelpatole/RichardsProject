                <span class="details">Your email-id</span>
                <input type="text" class="input" value="{{email}}" name="email" readonly>
            </div>
            <div class="input-box">
                <span class="details">Enter OTP here</span>
                <input type="text" class="input" placeholder="enter otp" name="otp" required>
            </div>
        </div>

        <div class="button-otp"> 
             <input type="submit" value="VERIFY">
        </div>
        </form>

    </div>
